<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @game.name %>
</p>

<p>
  <strong>Phase:</strong>
  <%= @game.phase %>
</p>

<p>
  <strong>Turn:</strong>
  <%= @game.turn %>
</p>

<p>
	<strong>Players:</strong>
	<table>
		<% @game.players.each do |player| %>
			<tr>
				<td>
					<%= link_to player.name, player_path(player) %>
				</td>
			</tr>
		<% end %>
	</table>
	</p>

<p>
	<strong>Supply Piles:</strong>
	<table>
		<% @game.supplies.each do |supply| %>
			<tr>
				<td>
					<%= link_to supply.name, supply_path(supply) %>
				</td>
			</tr>
		<% end %>
	</table>
</p>

<%= link_to 'Edit', edit_game_path(@game) %> |
<%= link_to 'Back', games_path %>
