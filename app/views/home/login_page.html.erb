<div class="content">
	<h1>Welcome to GENERIC GAME OF CARDS</h1>
	  <%= form_tag("/login", method: "post", class: "pure-form pure-form-stacked", enctype: "application/json") do %>
			<fieldset>
			<legend>Make yourself known</legend>

			<label for="username">Username</label>
			<input name="name" id="username" type="text">

			<label for="password">Password</label>
			<input name="password" id="password" type="password">

			<%= submit_tag("Log in", class: "pure-button pure-button-primary") %>

		</fieldset>

		<% end %>

    <div>
      <a href="/users/new">sign up</a>
    </div>

</div>


