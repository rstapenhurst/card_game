<h1>Listing piles</h1>

<table>
  <thead>
    <tr>
      <th>Card pile</th>
      <th>Card</th>
      <th>Card order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @piles.each do |pile| %>
      <tr>
        <td><%= pile.card_pile.name %></td>
        <td><%= pile.card.name %></td>
        <td><%= pile.card_order %></td>
        <td><%= link_to 'Show', pile %></td>
        <td><%= link_to 'Edit', edit_pile_path(pile) %></td>
        <td><%= link_to 'Destroy', pile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Pile', new_pile_path %>
