<h1>Listing players</h1>

<table>
  <thead>
    <tr>
      <th>Game</th>
      <th>User</th>
      <th>Play order</th>
      <th>Deck</th>
      <th>Hand</th>
      <th>Play area</th>
      <th>Discard</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.game %></td>
        <td><%= player.user %></td>
        <td><%= player.play_order %></td>
        <td><%= player.deck %></td>
        <td><%= player.hand %></td>
        <td><%= player.play_area %></td>
        <td><%= player.discard %></td>
        <td><%= link_to 'Show', player %></td>
        <td><%= link_to 'Edit', edit_player_path(player) %></td>
        <td><%= link_to 'Destroy', player, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

